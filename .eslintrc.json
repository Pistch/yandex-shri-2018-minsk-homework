{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "max-len": ["error", { "code": 120 }],
        "one-var": 0,
        "no-plusplus": 0,
        "prefer-const": 0,
        "consistent-return": 0,
        "no-underscore-dangle": 0,
        "jsx-a11y/no-noninteractive-element-interactions": 0,
        "jsx-a11y/click-events-have-key-events": 0
    }
}
