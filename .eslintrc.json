{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "max-len": ["error", { "code": 120 }],
        "one-var": 0,
        "react/jsx-no-bind": 0,
        "no-plusplus": 0,
        "prefer-const": 0
    }
}
